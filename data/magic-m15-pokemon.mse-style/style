	type:
		left: { if has_identity() then "52" else "32" }
		top: 296
		width: { (if has_identity() then "290" else "310") - max(22,card_style.rarity.content_width) }
		height: 20
		alignment: top shrink-overflow
		z index: 1
		padding top: 2
		font:
			name: Beleren Bold
			size: 13
			color: black
			separator color: red
	rarity:
		right: 344
		top: 297
		width: 44
		height: 22
		z index: 2
		render style: image
