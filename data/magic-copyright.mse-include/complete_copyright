additional credit 2:
	left:
		script:
			initial_space := 25 * stylesheet.card_width/375
			
			set_code_space := 4 * stylesheet.card_width/375
			set_code_width := if card.set_code == "" then 0 else set_code_space + card_style.set_code.content_width
			set_language_width := if card.set_language == "" then 0 else set_code_space + card_style.set_language.content_width
			set_width := if card.additional_credit_brush == "none" then set_code_width else max(set_code_width, set_language_width)
			
			illustrator_brush_width := (if card.illustrator_brush == "art old" then 31 else 14) * stylesheet.card_width/375
			illustrator_left := initial_space + set_width + illustrator_brush_width
			illustrator_width := max(50 * stylesheet.card_width/375, card_style.illustrator.content_width + 10 * stylesheet.card_width/375)
			top_margin := illustrator_left + illustrator_width
			
			additional_credit_brush_width := (if card.additional_credit_brush == "art old" then 31 else 14) * stylesheet.card_width/375
			additional_credit_left := initial_space + set_width + additional_credit_brush_width
			additional_credit_width := max(50 * stylesheet.card_width/375, card_style.additional_credit.content_width + 10 * stylesheet.card_width/375)
			bottom_margin := additional_credit_left + additional_credit_width
			
			additional_credit_brush_2_width := (if card.additional_credit_brush_2 == "art old" then 31 else 14) * stylesheet.card_width/375
			
			max(top_margin, bottom_margin) + additional_credit_brush_2_width + copyright_offset_left()
	top:				{ 499 * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ (if card.additional_credit_brush_2 != "none" then 80 else 0) * stylesheet.card_width/375 }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle left
	font:
		name:				Beleren Small Caps Bold
		size:				{ 7.25 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
