statistics dimension:
	position hint: 2
	name:   converted mana cost
	script: if (card.shape == "token" or card.rarity == "special" or card.rarity == "masterpiece") and set.trim_statistics then "" else cmc(card.casting_cost)
	numeric: true
	icon: stats/casting_cost.png

statistics dimension:
	position hint: 3
	name:   colored mana cost
	script: if (card.shape == "token" or card.rarity == "special" or card.rarity == "masterpiece") and set.trim_statistics then "" else colored_mana(card.casting_cost)
	numeric: true
	icon: stats/colored_casting_cost.png

statistics dimension:
	name: card devotion
	split list: true
	position hint: 4
	icon: stats/card_color.png
	script: card_devotion_statistic()
	description: Counting how many cards have exactly one white devotion in the set. Repeat for two white devotion. Repeat for three, then four+, the again for other colors.
	group: C
	group: CC
	group: CCC
	group: CCCC+
	group: W
	group: WW
	group: WWW
	group: WWWW+
	group: U
	group: UU
	group: UUU
	group: UUUU+
	group: B
	group: BB
	group: BBB
	group: BBBB+
	group: R
	group: RR
	group: RRR
	group: RRRR+
	group: G
	group: GG
	group: GGG
	group: GGGG+
	colors:
		C: rgb(120,90,90)
		CC: rgb(120,90,90)
		CCC: rgb(120,90,90)
		CCCC+: rgb(120,90,90)
		W: rgb(255,237,202)
		WW: rgb(255,237,202)
		WWW: rgb(255,237,202)
		WWWW+: rgb(255,237,202)
		U: rgb(42,141,255)
		UU: rgb(42,141,255)
		UUU: rgb(42,141,255)
		UUUU+: rgb(42,141,255)
		B: rgb(33,33,33)
		BB: rgb(33,33,33)
		BBB: rgb(33,33,33)
		BBBB+: rgb(33,33,33)
		R: rgb(255,52,0)
		RR: rgb(255,52,0)
		RRR: rgb(255,52,0)
		RRRR+: rgb(255,52,0)
		G: rgb(118,230,0)
		GG: rgb(118,230,0)
		GGG: rgb(118,230,0)
		GGGG+: rgb(118,230,0)

