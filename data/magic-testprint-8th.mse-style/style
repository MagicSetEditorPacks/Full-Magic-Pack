	editable: false
extra card field:
	type: text
	name: illustrator line
	save value: false
	script:
		if not styling.brush then forward_editor(prefix: "Illus. ", field: card.illustrator)
		else forward_editor(prefix: "", field: card.illustrator)
	description: The illustrator of the card.
