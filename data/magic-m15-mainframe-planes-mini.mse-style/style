############################################################## Extra card fields
extra card field:
	type: text
	name: card code
	save value: false
	script:
		if set.automatic_card_numbers and not styling.remove_from_autocount then
			card_number_m15() + "/" + card_count_m15()
		else
			forward_editor(field: card.custom_card_number)
extra card field:
	type: choice
	name: background
	editable: false
	save value: false
	choice: frame
