statistics dimension:
	name: land production
	split list: true
	position hint: 5
	icon: stats/card_color.png
	script: land_color_production_list()
	description: Counting how many lands can produce white mana in the set. Repeat for other colors.
	group: C
	group: W
	group: U
	group: B
	group: R
	group: G
	group: Any
	group: Chosen
	colors:
		C: rgb(120,90,90)
