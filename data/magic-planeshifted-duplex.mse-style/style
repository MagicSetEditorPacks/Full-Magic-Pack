		mask:
			script: if styling.image_size == "extended" then "/magic-planeshifted.mse-style/imagemask_extended.png" else "/magic-planeshifted.mse-style/imagemask_standard.png"
	############################# Card type
	type:
		left: {ifside(left:35,right:-306)}
		top : 298
		width: { 646 - max(22,card_style.rarity.content_width) }
		height: 20
		alignment: top shrink-overflow
		z index: 1
		padding top: 2
		font:
			name: Matrix
			size: 14
			color: rgb(255,255,255)
			separator color: rgb(128,128,128)
			shadow color: rgb(0,0,0)
			shadow displacement x: -1
			shadow displacement y: 1
	rarity:
		right: 342
		top : 297
		width: {if styling.side=="right" then 44 else 0}
		height: {if styling.side=="right" then 22 else 0}
		z index: 2
		render style: image
		alignment: middle right
		include file: /magic-modules.mse-include/rarities/choice_images
	############################# Text box
	text:
		left: {ifside(left:31,right:-310)}
		top : 328
		width: 652
