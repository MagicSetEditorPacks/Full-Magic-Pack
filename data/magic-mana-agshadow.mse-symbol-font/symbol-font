##Generic mana
symbol:
	image: mana_circle.png
	code: [XYZ]
	regex: yes
	draw text: 0
	text margin left:   .26
	text margin right:  .18
	text margin top:    -.08
	text margin bottom: -.06
	text font:
		name: MPlantin
		size: 1
		color: rgb(0,0,0)
symbol:
	image: mana_circle.png
	code: [0-9]+(?!/[WUBRGSTQ2])|.
	regex: yes
	draw text: 0
	text margin left:   .26
	text margin right:  .18
	text margin top:    -.08
	text margin bottom: -.06
	text font:
		name: MPlantin
		size: .9
		color: rgb(0,0,0)
		max stretch: 0.60

