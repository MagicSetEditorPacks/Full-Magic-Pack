	#example: Kaya's Guile

keyword:
	#english keyword: Modular
	keyword: 套件
	match: 套件<atom-param>数字</atom-param>
	mode: expert
	reminder: 此生物进战场时上面有{chinese_simplified_number(param1)}个+1/+1指示物。当它死去时，你可以将它的+1/+1指示物置于目标神器生物上。
	#example: Arcbound Prototype

keyword:
	#english keyword: Sunburst
	keyword: 辉映
	match: 辉映
	mode: expert
	reminder: 用过几种颜色的法术力来支付其费用，它进战场时上面便有几个{if languages["汉语"].is_creature(card.type) then "+1/+1" else "充电"}指示物。
	#example: Etched Oracle

