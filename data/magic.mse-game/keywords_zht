
############################################################## Blame GenevensiS for this

has keywords: true

############################################################## Keyword mode

keyword mode:
	name: old
	#name: 古老
	description: Old keywords (Banding, Phasing, etc.)

keyword mode:
	name: core
	#name: 核心
	description: Core set keywords (Flying, Haste, etc.)

keyword mode:
	name: expert
	#name: 嫻
	description: Expert set keywords (Storm, Dredge, etc.)

keyword mode:
	name: pseudo
	#name: 偽
	description: Pseudo keyword / Ability words (Landfall, Threshold, etc.)

keyword mode:
	name: action
	#name: 行動
	description: Keyword actions, reminder text at end of line (Scry, Regenerate, etc.)

keyword mode:
	name: custom
	#name: 專門
	description: Custom keywords
	is default: true

############################################################## Keyword parameter types

keyword parameter type:
	name: 費用
	match: [ ]?[HSVECTQXYZI0-9WUBRG/|]+|[-—―～][^(\r\n\.。:：]*
	optional: true
	script: cost_parameter_script_nonspace()
	reminder script: cost_parameter_script_nonspace()
	separator before is: ( |- ?|— ?|― ?|～|)
	separator after is: [.。:：]
	separator script: cost_parameter_dash()

keyword parameter type:
	name: 數字
	match: [XYZ0-9０１２３４５６７８９]+
	optional: true

keyword parameter type:
	name: 字首
	match: [^(.,”":;\n—]+
	optional: false

keyword parameter type:
	name: 稱號
	match: ([^(.:;\n—]+|[ ])
	optional: true

############################################################## All Magic keywords

keyword:
	#english keyword: Poisonous
	keyword: 劇毒
	match: 劇毒<atom-param>數字</atom-param>
	mode: expert
	reminder: 每當此生物對任一玩家造成戰鬥傷害時，該玩家得到{param1}個中毒指示物。具十個或更多中毒指示物的玩家會輸掉這盤遊戲。
	#example: Snake Cult Initiation

keyword:
	#english keyword: Deathtouch
	keyword: 死觸
	match: 死觸
	mode: core
	reminder: 它對生物造成的任何數量傷害都足以消滅後者。
	#example: Sedge Scorpion

keyword:
	#english keyword: Defender
	keyword: 守軍
	match: 守軍
	mode: core
	reminder: 此生物不能攻擊。
	#example: Moat Piranhas

keyword:
	#english keyword: Double strike
	keyword: 連擊
	match: 連擊
	mode: core
	reminder: 此生物能造成先攻傷害以及普通戰鬥傷害。
	#example: Iroas's Champion

#keyword:
#	#english keyword: Enchant
#	keyword: 結附
#	match: UNKNOWN
#	mode: core
#	reminder: UNKNOWN
#	#example: Contaminated Bond

keyword:
	#english keyword: Equip
	keyword: 佩帶
	match: 佩帶<atom-param>費用</atom-param>
	mode: core
	reminder: {param1}：貼附在目標由你操控的生物上。只能於巫術時機佩帶。
	#example: Greatsword of Tyr

keyword:
	#english keyword: First strike
	keyword: 先攻
	match: 先攻
	mode: core
	reminder: 此生物會比不具先攻異能的生物提前造成戰鬥傷害。
	#example: Warclamp Mastiff

keyword:
	#english keyword: Flashback
	keyword: 返照
	match: 返照<atom-param>費用</atom-param>
	mode: expert
	reminder: 你可以從你墳墓場中施放此牌，並支付其返照費用，然後將它放逐。
	#example: Rite of Harmony

keyword:
	#english keyword: Flash
	keyword: 閃現
	match: 閃現
	mode: core
	reminder: 你可以於你能夠施放瞬間的時機下施放此咒語。
	#example: Hired Blade

keyword:
	#english keyword: Flying
	keyword: 飛行
	match: 飛行
	mode: core
	reminder: 此生物只能被具飛行或延勢異能的生物阻擋。
	#example: Bartizan Bats

keyword:
	#english keyword: Haste
	keyword: 敏捷
	match: 敏捷
	mode: core
	reminder: 此生物受你操控時便能攻擊與<sym-auto>T</sym-auto>。
	#example: Hostile Minotaur

keyword:
	#english keyword: Hexproof
	keyword: 辟邪
	match: 辟邪
	mode: core
	reminder: 此永久物不能成為由對手操控之咒語或異能的目標。
	#example: Humongulus

keyword:
	#english keyword: Indestructible
	keyword: 不滅
	match: 不滅
	mode: core
	reminder: 註明「消滅」的效應和傷害不會消滅{if languages["漢語"].is_creature(card.type) then "此生物" else "此永久物"}。{if languages["漢語"].is_creature(card.type) then "如果其防禦力降到0或更少，它仍會置入其擁有者的墳墓場。" else ""}
	#example: Seraph of the Suns

keyword:
	#english keyword: Intimidate
	keyword: 威嚇
	match: 威嚇
	mode: old
	reminder: 此生物只能被神器生物和／或與它有共通顏色的生物阻擋。
	#example: Krenko's Enforcer

keyword:
	#english keyword: Landwalk
	keyword: 地行者
	match: <atom-param>字首</atom-param>行者
	mode: old
	reminder: 只要防禦玩家操控{param1}，此生物便不能被阻擋。
	#example: Farbog Explorer

keyword:
	#english keyword: Lifelink
	keyword: 繫命
	match: 繫命
	mode: core
	reminder: 此生物所造成的傷害會讓你獲得等量的生命。
	#example: Daybreak Chaplain

keyword:
	#english keyword: Ward
	keyword: 守護
	match: 守護<atom-param>費用</atom-param>
	mode: expert
	reminder: 每當此生物成為由對手操控之咒語或異能的目標時，除非該玩家支付{param1}，否則反擊之。
	#example: Rimeshield Frost Giant

keyword:
	#english keyword: Protection
	keyword: 保護
	match: 反<atom-param>稱號</atom-param>保護
	mode: expert
	reminder: 此永久物不能被{param1}的東西阻擋、指定為目標、造成傷害、結附或是裝備。
	#example: Blightbeetle

keyword:
	#english keyword: Reach
	keyword: 延勢
	match: 延勢
	mode: core
	reminder: 此生物能阻擋具飛行異能的生物。
	#example: Canopy Spider

keyword:
	#english keyword: Shroud
	keyword: 帷幕
	match: 帷幕
	mode: core
	reminder: 此永久物不能成為咒語或異能的目標。
	#example: Nimble Mongoose

keyword:
	#english keyword: Trample
	keyword: 踐踏
	match: 踐踏
	mode: core
	reminder: 此生物造成之過量戰鬥傷害能對所攻擊的玩家或鵬洛客造成之。
	#example: Colossal Dreadmaw

keyword:
	#english keyword: Vigilance
	keyword: 警戒
	match: 警戒
	mode: core
	reminder: 此生物攻擊時不需橫置。
	#example: Alpine Watchdog

