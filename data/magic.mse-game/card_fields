############################################################## Card fields

############################################################## Frame building modules
### These should maybe be in script instead
depends on:
	package: magic-copyright.mse-include
	version: 2024-01-29
depends on:
	package: magic-corners.mse-include
	version: 2024-01-29
depends on:
	package: magic-counters.mse-include
	version: 2024-01-29
depends on:
	package: magic-loyalty.mse-include
	version: 2024-01-29
