			scale down to: 7
			color: black
		symbol font:
			name: { styling.text_box_mana_symbols }
			size: 14
		alignment: middle left
		z index: 2
		padding left: 5
		padding top: 2
		padding right: 5
		padding bottom: 2
		line height hard: 1.2
		line height line: 1.5
	############################# Card sorting / numbering
	############################# Copyright stuff
