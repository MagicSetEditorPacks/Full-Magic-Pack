card style:
	card stamp:
		left:
			script:
				width := face_coordinates_map(1).width
				height := face_coordinates_map(1).height
				if width > height then	face_coordinates_map(1).left + 7 * width/523 + card_stamp_offset_left()
				else					face_coordinates_map(1).left + 166 * width/375 + card_stamp_offset_left()
		top:
			script:
				width := face_coordinates_map(1).width
				height := face_coordinates_map(1).height
				if width > height then	face_coordinates_map(1).top + 166 * height/375 + card_stamp_offset_top()
				else					face_coordinates_map(1).top + 473 * height/523 + card_stamp_offset_top()
		width:
			script:
				width := face_coordinates_map(1).width
				height := face_coordinates_map(1).height
				if width > height then	43 * width/523 + card_stamp_offset_width()
				else					43 * width/375 + card_stamp_offset_width()
		height:
			script:
				width := face_coordinates_map(1).width
				height := face_coordinates_map(1).height
				if width > height then	43 * height/375 + card_stamp_offset_height()
				else					43 * height/523 + card_stamp_offset_height()
		visible:		{ not card_stamp_disabled() }
		popup style:	in place
		include file:	/magic.mse-game/stamps/menu_choice_images
		render style:	image
		image:
			script:
				set.stamp_behavior
				card.rarity
				card_stamp_image(field: 1, face: 1)
		z index:		1000
