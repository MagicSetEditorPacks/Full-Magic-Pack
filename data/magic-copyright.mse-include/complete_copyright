set code:
	left:				{ 24 * stylesheet.card_width/375 + copyright_offset_left() }
	top:				{ 499 * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ 40 * stylesheet.card_width/375 }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle left
	font:
		name:				Relay-Medium
		size:				{ 7 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
		weight:				bold
set language:
	left:				{ 24 * stylesheet.card_width/375 + copyright_offset_left() }
	top:				{ 509 * stylesheet.card_height/523 + copyright_offset_top() }
	width:
		script:
			code := if is_masterpiece() then set.masterpiece_set_code else set.set_code
			if card.additional_credit_brush == "none" or code == "" then 0
			else 40 * stylesheet.card_width/375
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle left
	font:
		name:				Relay-Medium
		size:				{ 7 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
		weight:				bold
card code:
	left:				{ 24 * stylesheet.card_width/375 + copyright_offset_left() }
	top:				{ 489 * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ 120 * stylesheet.card_width/375 }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle left
	font:
		name:				Relay-Medium
		size:				{ 7 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
		weight:				bold
illustrator:
	left:
		script:
			initial_space := 25 * stylesheet.card_width/375
			set_code_space := 4 * stylesheet.card_width/375
			set_code_width := if card.set_code == "" then 0 else (set_code_space + card_style.set_code.content_width)
			set_language_width := if card.set_language == "" then 0 else (set_code_space + card_style.set_language.content_width)
			set_width := if card.additional_credit_brush == "none" then set_code_width else max(set_code_width, set_language_width)
			illustrator_brush_width := (if card.illustrator_brush == "art old" then 31 else 14) * stylesheet.card_width/375
			initial_space + set_width + illustrator_brush_width + copyright_offset_left()
	top:				{ 499 * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ max(50 * stylesheet.card_width/375, card_style.illustrator.content_width + 10 * stylesheet.card_width/375) }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle left
	font:
		name:				Beleren Small Caps Bold
		size:				{ 7.25 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
illustrator brush:
	left:
		script:
			initial_space := 25 * stylesheet.card_width/375
			set_code_space := 4 * stylesheet.card_width/375
			set_code_width := if card.set_code == "" then 0 else (set_code_space + card_style.set_code.content_width)
			set_language_width := if card.set_language == "" then 0 else (set_code_space + card_style.set_language.content_width)
			set_width := if card.additional_credit_brush == "none" then set_code_width else max(set_code_width, set_language_width)
			initial_space + set_width + copyright_offset_left()
	top:				{ 501 * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ (if card.illustrator_brush == "art old" then 30 else 12) * stylesheet.card_width/375 }
	height:				{ 7 * stylesheet.card_height/523 }
	z index:			1100
	popup style:		in place
	include file:		/magic.mse-game/credit_icons/menu_choice_images
	render style:		image
	image:				{ illustrator_brush_image(field: 1, wide: false) }
