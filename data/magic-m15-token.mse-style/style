		height:	42
		z index: 1
		visible: { card.pt != "" }
		render style: image
		image: { module_ptbox() }
	foil layer:
		left: 0
		top : 0
		width: 375
		height: 523
		z index: 3
		render style: image
		image: {if styling.overlay == "" then nil else styling.overlay + "/overlay.png"}
