############################################################## Casting cost
card field:
	type: text
	name: casting cost
	description: The casting cost of the card.
	show statistics: false
	card list visible: true
	card list name: CC
	card list column: 0100
	card list alignment: right
	card list width: 60
	script: mana_filter(value)
