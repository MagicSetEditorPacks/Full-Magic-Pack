copyright:
	right:				{ 351 * stylesheet.card_width/375 + copyright_offset_right() }
	top:				{ (if card.pt != "" or card.loyalty != "" then 500 + copyright_offset_pt_top() else if card.copyright_b != "" then 500 else 490) * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ if set.automatic_copyright then 0 else 140 * stylesheet.card_width/375 }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle right shrink-overflow
	font:
		name:				MPlantin
		size:				{ 6.5 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
		weight:				bold
auto copyright:
	right:				{ 351 * stylesheet.card_width/375 + copyright_offset_right() }
	top:				{ (if card.pt != "" or card.loyalty != "" then 500 + copyright_offset_pt_top() else if card.copyright_b != "" then 500 else 490) * stylesheet.card_height/523 + copyright_offset_top() }
	width:				{ if set.automatic_copyright then 140 * stylesheet.card_width/375 else 0 }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1100
	alignment:			middle right shrink-overflow
	font:
		name:				MPlantin
		size:				{ 6.5 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
		weight:				bold
copyright b:
	left:
		script:
			needed := (255 + copyright_offset_pt_left() - if length(card.copyright_b) > 9 then 45 else if length(card.copyright_b) > 6 then 25 else if length(card.copyright_b) > 4 then 10 else 0) * stylesheet.card_width/375
			aligned := 351 * stylesheet.card_width/375 + copyright_offset_right() - (if set.automatic_copyright then card_style.auto_copyright.content_width else card_style.copyright.content_width)
			max(min(needed, aligned), 211 * stylesheet.card_width/375)
	right:				{ (if card.pt != "" or card.loyalty != "" then 279 + copyright_offset_pt_left() else 351) * stylesheet.card_width/375 + copyright_offset_right() }
	top:				{ 490 * stylesheet.card_height/523 + copyright_offset_top() }
	height:				{ 10 * stylesheet.card_height/523 }
	z index:			1200
	alignment:			{ if card.pt != "" or card.loyalty != "" then "middle left shrink-overflow" else "middle right shrink-overflow" }
	font:
		name:				MPlantin
		size:				{ 6.5 * stylesheet.card_height/523 }
		color:				{ styling.copyright_text_color or else set.copyright_text_color }
		weight:				bold
