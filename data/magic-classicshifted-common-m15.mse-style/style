############################################################## Extra scripts
init script:
	# Load scripts for image box
	include file: /magic-default-image.mse-include/scripts
	
	# How should mana costs be sorted?
	mana_sort       := {
		colors := ""
		
		if contains(input, match:"W") then colors := colors + "W"
		if contains(input, match:"U") then colors := colors + "U"
		if contains(input, match:"B") then colors := colors + "B"
		if contains(input, match:"G") then colors := colors + "G"
		if contains(input, match:"R") then colors := colors + "R"
		
		if contains(styling.mana_sorting, match:"standard") then
			# For these color triads use khans sorting
			if colors == "UGR" or colors == "WBG" or colors == "WUR"  or colors == "UBG"  or colors == "WBR" then 	
				sort_text@(order: "XYZI[0123456789]CHSA(WBGUR)")()
			else
				sort_text@(order: "XYZI[0123456789]CHSA(WUBRG)")()
		else if contains(styling.mana_sorting, match:"unsorted") then		
			input
		input
	}
	
	# Load new blends (order of 3 colors match new sets)
	include file: /magic-classicshifted-blends-m15.mse-include/new-blends
	# Should hybrids have a grey name?
	mask_hybrid_with_land := { styling.grey_hybrid_name }
	
	#Should multicolor lands with basic land types have a colored name?
	mask_multi_land_with_color := { styling.colored_multicolor_land_name }
	
	template_prefix := [card: "card/" card2: "" identity: "/magic-identity-new.mse-include/" crown: "/magic-classicshifted-shared-m15.mse-include/crown/" transform: "transformation/t_" artifactcard: "artifact/a" artifactcrown: "artifact/a"]
	template_suffix := [card: "card.jpg" card2: "card2.jpg" identity: "identity.png" crown: "crown.png" transform: "card.jpg"  artifactcard: "card.jpg" artifactcrown: "crown.png"]
	template      := { template_prefix[type] + input + template_suffix[type] }
	land_template := { template_prefix[type] + (if input == "a" then "c" else input) + "l" + template_suffix[type] }
	# Use land templates for previews because they show more contrast
	hybrid_previews := "land,hybrid"
	
	# Use the normal tap symbol
	mana_t := {
		if      styling.tap_symbol == "old"        then "old"
		else if styling.tap_symbol == "diagonal T" then "older"
		else                                            "new"
	}
	
	# Use guild mana symbols?
	guild_mana := { styling.use_guild_mana_symbols }
	
	
	crown_box := 					{ color_background(type:"crown",     		base_hybrid:card_hybrid) }
	transformation_background := 	{ color_background(type:"transform",     	base_hybrid:card_hybrid) }
	artifact_background := 			{ color_background(type:"artifactcard", 	base_hybrid:card_hybrid) }
	artifact_crown_box := 			{ color_background(type:"artifactcrown",   base_hybrid:card_hybrid) }
	
	card_frame := {
		if styling.transformation_front then 
			transformation_background() 
		else if contains(card.card_color, match:"artifact") then
			artifact_background() 
		else
			card_background() 
		}
		
	card_crown := {
		if contains(card.card_color, match:"artifact") then
			artifact_crown_box()
		else
			crown_box()
	}
	
	is_nyxborn := {
		styling.nyx_overlay and (contains(card.type, match:"Enchantment Creature") or contains(card.type, match:"Enchantment Artifact"))
	}
	
	is_miracle := {
		styling.miracle_overlay and contains(card.text, match:"Miracle")
	}
	
############################################################## Set info fields
set info style:
	symbol:
		variation:
			name: invertedcommon
			border radius: 0.10
			fill type: solid
			fill color:   rgb(255,255,255)
			border color: rgb(0,0,0)
############################################################## Extra style options
styling field:
	type: boolean
	name: grey hybrid name
	description: Use a grey background for the name and type line on hybrid cards. This is done on real cards.
styling field:
	type: boolean
	name: colored multicolor land name
	description: Use a colored background for the name and type on multicolor land cards with a basic land type. This is done on real cards.
styling field:
	type: boolean
	name: use guild mana symbols
	description: Use the Ravnica guild symbols instead of the official half/half circles for hybrid mana.
	initial: no
styling field:
	type: choice
	name: tap symbol
	description: What tap and untap symbols should be used on cards?
	initial: modern
	choice: modern
	choice: old
	choice: diagonal T
styling field:
	type: package choice
	name: text box mana symbols
