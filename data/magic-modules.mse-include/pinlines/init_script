pinline_masks := "/magic-modules.mse-include/pinlines/masks/"

#### Default to alternate color pinlines
pinline_inner_mask_1 := { pinline_masks + "frame m15.png" }
pinline_image_1 := { set_mask(image:card_background(), mask:pinline_inner_mask_1()) }
pinline_mask_1 := { "multicolor_blend_card.png" }
pinline_inner_mask_2 := { pinline_masks + "frame m15.png" }
pinline_image_2 := { set_mask(image:card_background(), mask:pinline_inner_mask_2()) }
pinline_mask_2 := { "multicolor_blend_card.png" }
pinline_inner_mask_3 := { pinline_masks + "frame m15.png" }
pinline_image_3 := { set_mask(image:card_background(), mask:pinline_inner_mask_3()) }
pinline_mask_3 := { "multicolor_blend_card.png" }

pinline_left := { face_coordinates_map(1).left }
pinline_top := { face_coordinates_map(1).top }
pinline_width := { 
	if face_is_rotated(1) then
		face_coordinates_map(1).height
	else face_coordinates_map(1).width
}
pinline_height := { 
	if face_is_rotated(1) then
		face_coordinates_map(1).width
	else face_coordinates_map(1).height
}

