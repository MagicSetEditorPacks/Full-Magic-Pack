
############################################################## Blame GenevensiS for this

has keywords: true

############################################################## Keyword mode

keyword mode:
	name: old
	#name: 旧
	description: Old keywords (Banding, Phasing, etc.)

keyword mode:
	name: core
	#name: 核心
	description: Core set keywords (Flying, Haste, etc.)

keyword mode:
	name: expert
	#name: 专
	description: Expert set keywords (Storm, Dredge, etc.)

keyword mode:
	name: pseudo
	#name: 伪
	description: Pseudo keyword / Ability words (Landfall, Threshold, etc.)

keyword mode:
	name: action
	#name: 行动
	description: Keyword actions, reminder text at end of line (Scry, Regenerate, etc.)

keyword mode:
	name: custom
	#name: 专门
	description: Custom keywords
	is default: true

############################################################## Keyword parameter types

keyword parameter type:
	name: 费用
	match: [ ]?[HSVECTQXYZI0-9WUBRG/|]+|[-—―～][^(\r\n\.。:：]*
	optional: true
	script: cost_parameter_script_nonspace()
	reminder script: cost_parameter_script_nonspace()
	separator before is: ( |- ?|— ?|― ?|～|)
	separator after is: [.。:：]
	separator script: cost_parameter_dash()

keyword parameter type:
	name: 数字
	match: [XYZ0-9０１２３４５６７８９]+
	optional: true

keyword parameter type:
	name: 字首
	match: [^(.,”":;\n—]+
	optional: false

keyword parameter type:
	name: 名称
	match: ([^(.:;\n—]+|[ ])
	optional: true

############################################################## All Magic keywords

keyword:
	#english keyword: Poisonous
	keyword: 剧毒
	match: 剧毒<atom-param>数字</atom-param>
	mode: expert
	reminder: 每当此生物对任一牌手造成战斗伤害时，该牌手得到{chinese_simplified_number(param1)}个中毒指示物。 牌手若具有十个或更多的中毒指示物，便输掉这盘游戏。
	#example: Snake Cult Initiation

keyword:
	#english keyword: Deathtouch
	keyword: 死触
	match: 死触
	mode: core
	reminder: 它对生物造成的任何数量伤害都足以消灭后者。
	#example: Sedge Scorpion

keyword:
	#english keyword: Defender
	keyword: 守军
	match: 守军
	mode: core
	reminder: 此生物不能攻击。
	#example: Moat Piranhas

keyword:
	#english keyword: Double strike
	keyword: 连击
	match: 连击
	mode: core
	reminder: 此生物能造成先攻伤害以及普通战斗伤害。
	#example: Iroas's Champion

keyword:
	#english keyword: Enchant
	keyword: 结界
	match: 结附于<atom-param>名称</atom-param>
	mode: core
	reminder: 于使用时指定一个{param1}为目标。 此牌进场时结附在该{param1}上。
	#example: Contaminated Bond

keyword:
	#english keyword: Equip
	keyword: 佩带
	match: 佩带<atom-param>费用</atom-param>
	mode: core
	reminder: {param1}：贴附在目标由你操控的生物上。只能于法术时机佩带。
	#example: Greatsword of Tyr

keyword:
	#english keyword: First strike
	keyword: 先攻
	match: 先攻
	mode: core
	reminder: 此生物会比不具先攻异能的生物提前造成战斗伤害。
	#example: Warclamp Mastiff

keyword:
	#english keyword: Flashback
	keyword: 返照
	match: 返照<atom-param>费用</atom-param>
	mode: expert
	reminder: 你可以从你坟墓场中施放此牌，并支付其返照费用，然后将它放逐。
	#example: Rite of Harmony

keyword:
	#english keyword: Flash
	keyword: 闪现
	match: 闪现
	mode: core
	reminder: 你可以于你能够施放瞬间的时机下施放此咒语。
	#example: Hired Blade

keyword:
	#english keyword: Flying
	keyword: 飞行
	match: 飞行
	mode: core
	reminder: 此生物只能被具飞行或延势异能的生物阻挡。
	#example: Bartizan Bats

keyword:
	#english keyword: Haste
	keyword: 敏捷
	match: 敏捷
	mode: core
	reminder: 此生物受你操控时便能攻击与<sym-auto>T</sym-auto>。
	#example: Hostile Minotaur

keyword:
	#english keyword: Hexproof
	keyword: 辟邪
	match: 辟邪
	mode: core
	reminder: 此永久物不能成为由对手操控之咒语或异能的目标。
	#example: Humongulus

keyword:
	#english keyword: Indestructible
	keyword: 不灭
	match: 不灭
	mode: core
	reminder: 注明「消灭」的效应和伤害不会消灭{if languages["汉语"].is_creature(card.type) then "此生物" else "此永久物"}。{if languages["汉语"].is_creature(card.type) then "如果其防御力降到0或更少，它仍会置入其拥有者的坟墓场。" else ""}
	#example: Seraph of the Suns

keyword:
	#english keyword: Intimidate
	keyword: 威吓
	match: 威吓
	mode: old
	reminder: 此生物只能被神器生物和／或与它有共通颜色的生物阻挡。
	#example: Krenko's Enforcer

keyword:
	#english keyword: Landwalk
	keyword: 地行者
	match: <atom-param>字首</atom-param>行者
	mode: old
	reminder: 只要防御牌手操控{param1}，此生物便不能被阻挡。
	#example: Farbog Explorer

keyword:
	#english keyword: Lifelink
	keyword: 系命
	match: 系命
	mode: core
	reminder: 此生物所造成的伤害会让你获得等量的生命。
	#example: Daybreak Chaplain

keyword:
	#english keyword: Ward
	keyword: 守护
	match: 守护<atom-param>费用</atom-param>
	mode: expert
	reminder: 每当此生物成为由对手操控之咒语或异能的目标时，除非该牌手支付{param1}，否则反击之。
	#example: Rimeshield Frost Giant

keyword:
	#english keyword: Protection
	keyword: 保护
	match: 反<atom-param>名称</atom-param>保护
	mode: expert
	reminder: 此永久物不能被{param1}的东西阻挡、指定为目标、造成伤害、结附或是装备。
	#example: Blightbeetle

keyword:
	#english keyword: Reach
	keyword: 延势
	match: 延势
	mode: core
	reminder: 此生物能阻挡具飞行异能的生物。
	#example: Canopy Spider

keyword:
	#english keyword: Shroud
	keyword: 帷幕
	match: 帷幕
	mode: core
	reminder: 此永久物不能成为咒语或异能的目标。
	#example: Nimble Mongoose

keyword:
	#english keyword: Trample
	keyword: 践踏
	match: 践踏
	mode: core
	reminder: 此生物造成之过量战斗伤害能对所攻击的牌手或鹏洛客造成之。
	#example: Colossal Dreadmaw

keyword:
	#english keyword: Vigilance
	keyword: 警戒
	match: 警戒
	mode: core
	reminder: 此生物攻击时不需横置。
	#example: Alpine Watchdog

