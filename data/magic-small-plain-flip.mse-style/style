############################################################## Extra scripts

init script:
	# Use the normal tap symbol
	mana_t := {
		if      styling.tap_symbol == "old"   then "old"
		else if styling.tap_symbol == "older" then "older"
		else                                       "new"
	}
	
	# Use guild mana symbols?
	guild_mana := {false}
	
	# is text box empty?
	has_text := {(card.rule_text!="") or (card.flavor_text!="<i-flavor></i-flavor>")}
	card_shape := { "flip" }
