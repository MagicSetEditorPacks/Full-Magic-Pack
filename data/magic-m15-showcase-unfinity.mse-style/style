extra card style:
	pt box:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			1
		visible:			{ card.pt != "" }
		render style:		image
		image:				{ card_ptbox() }
	crown:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			1
		visible:			{ is_crowned() }
		render style:		image
		image:				{ card_crown() }
	foil layer:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			1050
		render style:		image
		image:				{if styling.overlay == "" then nil else styling.overlay + "/overlay.png"}
		mask:				{ "foil_mask" + (if card.pt != "" then "_pt" else "") + (if is_stamped() then "_rare" else "") + (if is_crowned() then "_crown" else "") + ".png" }
	stamp border:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			2
		visible:			{ is_stamped() }
		mask:				stamp_border_mask.png
	stamp foil:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			3
		render style:		image
		image:				{ card_stampholofoil() }
