############################################################## Separators
card field:
	type: choice
	name: separator
	description: The separator between blocks of text, such as the flavor bar.
	show statistics: false
	card list name: Separator
	card list column: 0910
	card list width: 110
	include file: /magic-separators.mse-include/choices
	default: set.use_flavor_bar; separator_default(value, margin_code: "sep1")
