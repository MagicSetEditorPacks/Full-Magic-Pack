mse version:	2.0.0
full name:		Magic The Gathering, miscellaneous images
version:		2024-01-29



# This file doesn't do anything.
# Other files in this directory can be included in game/style files.
# Below are three typical examples of how to use these.



# Adding a flavor bar separating the rule text and flavor text:

#styling field:
#	type:			boolean
#	name:			flavor bar
#	initial:		yes

#extra card field:
#	type:			choice
#	name:			flavor bar
#	editable:		false
#	save value:		false
#	choice:			flavor bar

#extra card style:
#	flavor bar:
#		left:			0
#		top:			{ bar_equation() - 1 }
#		width:			375
#		height:			4
#		z index:		600
#		visible:		{ styling.flavor_bar and card.rule_text != "" and remove_tags(card.flavor_text) != "" }
#		render style:	image
#		image:			/magic-misc.mse-include/flavor_bar.png



# Adding icons to the choice options in a styling menu:

#styling field:
#	type:			choice
#	name:			legend crown
#	choice:			yes
#	choice:			if legendary
#	choice:			no
#	initial:		if legendary

#styling style:
#	legend crown:
#		render style: both
#		choice images:
#			yes:			/magic-misc.mse-include/choice_yes.png
#			if legendary:	/magic-misc.mse-include/choice_if.png
#			no:				/magic-misc.mse-include/choice_no.png



# Adding a recolorable paintbrush icon between the set code and the artist's name:

#styling field:
#	type:			color
#	name:			copyright text color
#	choice:			white
#	choice:			black
#	initial:		white
#	allow custom:	true

#extra card field:
#	type:			choice
#	name:			artist arrow
#	editable:		false
#	save value:		false
#	choice:			artist arrow

#extra card style:
#	artist arrow:
#		left:			{ if card.set_code == "" then 25 else 29 + card_style.set_code.content_width }
#		top:			501
#		width:			12
#		height:			7
#		z index:		1000
#		render style:	image
#		image:			{ recolor_image("/magic-misc.mse-include/icon_art.png", color: styling.copyright_text_color) }
