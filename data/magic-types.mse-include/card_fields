card style:
	type:
		left:				{ indicator_left() + (if (not indicator_disabled()) and has_identity() then indicator_size()*1.15 else 0) + type_offset_left() + typeline_offset_left() + typeline_offset_height() }
		top:				{ indicator_top() - indicator_size() * 0.2 + type_offset_top() + typeline_offset_top() + type_font_vertical() }
		right:				{ rarity_left() + if set.shorten_types_for_rarity then (-rarity_size()*0.09) else rarity_size() + type_offset_right() + typeline_offset_left() + typeline_offset_width() - typeline_offset_height() }
		height:				{ indicator_size() * 1.3 + type_offset_height() + typeline_offset_height() }
		z index:			1210
		alignment:			middle left shrink-overflow
		visible:			{ (not typeline_disabled()) and not type_disabled() }
		font:
			name:				{ type_font() }
			italic name:		{ type_font_italic() }
			size:				{ type_font_size() }
			color:				{ type_font_color() }
			separator color:	red