############################################################## Extra card fields
extra card field:
	type: text
	name: card code
	save value: false
	script:
		if set.automatic_card_numbers then
			forward_editor(prefix: card_number_m15() + "/" + card_count_m15() + " " + " ", field: card.card_code_text)
		else
			combined_editor(field1: card.custom_card_number, separator: " " + " ", field2: card.card_code_text)
