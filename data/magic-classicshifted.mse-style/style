		symbol font:
			name: { styling. text_box_mana_symbols }
			size: 14
		alignment:
			script:
				if styling.center_short_text and
				   not contains(match:"\n", card.rule_text) and
				   card.flavor_text == "<i-flavor></i-flavor>" and
				   card_style.text.content_lines <= 2
				then "middle center"
				else "middle left"
		z index: 2
