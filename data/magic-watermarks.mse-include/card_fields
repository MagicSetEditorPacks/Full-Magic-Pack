card style:
	watermark:
		left:			{ text_style_field(watermark_text_field()).left		- face_coordinates_map(watermark_face()).width/375*15	- watermark_offset_width()		+ watermark_offset_left()  }
		width:			{ text_style_field(watermark_text_field()).width	+ face_coordinates_map(watermark_face()).width/375*30	+ watermark_offset_width()*2 }
		top:			{ text_style_field(watermark_text_field()).top		+ face_coordinates_map(watermark_face()).height/523*3	- watermark_offset_height()		+ watermark_offset_top() }
		height:			{ text_style_field(watermark_text_field()).height	- face_coordinates_map(watermark_face()).height/523*6	+ watermark_offset_height()*2	+ (if is_stamped(field: watermark_stamp_field()) then watermark_offset_stamp() else 0) }
		visible:		{ not watermark_disabled() }
		alignment:		middle center
		popup style:	in place
		render style:	image
		include file:	/magic.mse-game/watermarks/menu_choice_images
		image:			{ watermark_scripts[card.watermark](face:watermark_face()) }
		z index:		1040