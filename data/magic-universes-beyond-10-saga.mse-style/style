	card stamp border:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			41
		visible:			{ is_stamped() }
		mask:				stamp_border_mask.png
	hybrid separator:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			805
		visible:
			script:
				count := length(pure_colors(card.card_color))
				artifact := contains(card.card_color, match: "artifact")
				hybrid := contains(card.card_color, match: "hybrid")
				styling.bookmark and
				contains(card.card_color, match: "horizontal") and
				(
					(count == 2 and not	(artifact and hybrid))
					or
					(count == 1 and		(artifact and hybrid))
				)
		render style:		image
		image:				hybrid_separator.png
	bookmark:
		left:				0
		top:				0
		width:				{ stylesheet.card_width }
		height:				{ stylesheet.card_height }
		z index:			800
		visible:			{ styling.bookmark }
		render style:		image
		image:				{ card_bookmark() }
