			alignment: bottom right
		always symbol: true
		z index: 920
		padding top: 0
		mask: costmask.png
	card symbol:
		left: {if card.card_symbol=="none" then 50 else 63}
		top : 31
		height: 21
		width: 23
		z index: 820
		render style: image
		include file:		/magic.mse-game/card-symbols/menu_choice_images
